<Window x:Class="BBTV6B_SztGUI.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BBTV6B_SztGUI.WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="1" VerticalAlignment="Top" Background="DeepSkyBlue">
            <Button x:Name="b_exchange" Content="Tőzsde" Margin="10" Padding="10" Background="White"/>
            <Button x:Name="b_stock" Content="Részvények" Margin="10" Padding="10" Background="White"/>
            <Button x:Name="b_transaction" Content="Tranzakciók" Margin="10" Padding="10" Background="White"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="1" Background="DeepSkyBlue" VerticalAlignment="Top" Height="58">

        </StackPanel>
    </Grid>
</Window>
